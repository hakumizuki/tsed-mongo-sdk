{
  "name": "tsed-mongo-sdk",
  "version": "1.0.0",
  "description": "Experimental project for Ts.ED x MongoDB backend dev environment.",
  "scripts": {
    "build": "yarn run tsc",
    "tsc": "tsc --project tsconfig.compile.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start": "tsnd --inspect --ignore-watch node_modules --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "test": "yarn run test:lint && yarn run test:coverage",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:coverage": "yarn run test:unit",
    "test:lint": "eslint src --ext .ts",
    "test:lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@tsed/ajv": "^6.75.9",
    "@tsed/common": "^6.75.9",
    "@tsed/core": "^6.75.9",
    "@tsed/di": "^6.75.9",
    "@tsed/exceptions": "^6.75.9",
    "@tsed/json-mapper": "^6.75.9",
    "@tsed/mongoose": "^6.75.9",
    "@tsed/passport": "^6.75.9",
    "@tsed/platform-express": "^6.75.9",
    "@tsed/schema": "^6.75.9",
    "@tsed/socketio": "^6.75.9",
    "@tsed/swagger": "^6.75.9",
    "ajv": "^8.6.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "method-override": "^3.0.0",
    "mongoose": "^6.0.12",
    "passport": "^0.5.0",
    "socket.io": "^4.3.1"
  },
  "devDependencies": {
    "@tsed/cli-plugin-eslint": "3.13.4",
    "@tsed/cli-plugin-jest": "3.13.4",
    "@tsed/cli-plugin-mongoose": "3.13.4",
    "@tsed/cli-plugin-passport": "3.13.4",
    "@tsed/testing-mongoose": "^6.75.9",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/method-override": "^0.0.32",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.6",
    "@types/passport": "^1.0.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "tsed": {
    "packageManager": "yarn",
    "convention": "default",
    "architecture": "default"
  }
}
